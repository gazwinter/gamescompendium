<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="GamesCompendium.Views.ClassicGamesPage"
             xmlns:vm="clr-namespace:GamesCompendium.ViewModels"
              Title="{Binding Title}"
             x:Name="ClassicGames">
    <ContentPage.BindingContext>
        <vm:ClassicGamesViewModel />
    </ContentPage.BindingContext>

    <StackLayout>
        <Button Command="{Binding LoadGameCommand}" CommandParameter="TicTacToe"
                Text="Tic Tac Toe" />
    </StackLayout>
    
</ContentPage>