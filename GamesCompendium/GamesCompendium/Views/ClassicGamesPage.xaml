<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="GamesCompendium.Views.ClassicGamesPage"
             xmlns:vm="clr-namespace:GamesCompendium.ViewModels"
              Title="{Binding Title}"
             x:Name="ClassicGames">
    <ContentPage.BindingContext>
        <vm:ClassicGamesViewModel />
    </ContentPage.BindingContext>

    <FlexLayout FlowDirection="LeftToRight"
                Direction="Column"
                AlignContent="Start">
        <Frame BorderColor="Black"
               Margin="50">
            <StackLayout Orientation="Vertical"
                         HorizontalOptions="Center">

                <ImageButton Source="tictactoe.png"
                             Command="{Binding LoadGameCommand}"
                             CommandParameter="TicTacToe"
                             BackgroundColor="White"
                             Scale="1" />
                <Label Text="Tic Tac Toe"
                       HorizontalOptions="Center"
                       FontSize="Large"
                       VerticalOptions="Start" />
            </StackLayout>
        </Frame>
    </FlexLayout>
    
</ContentPage>