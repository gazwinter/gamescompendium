<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="GamesCompendium.Views.CardGamesPage"
             xmlns:vm="clr-namespace:GamesCompendium.ViewModels"
              Title="{Binding Title}"
             x:Name="CardGames">
    <ContentPage.BindingContext>
        <vm:CardGamesViewModel />
    </ContentPage.BindingContext>

    <StackLayout>
        <Button Text="Blackjack"
                Command="{Binding LoadGameCommand}"
                CommandParameter="Blackjack" />
    </StackLayout>
    
</ContentPage>